	"item": [
		{
			"name": "REST API (ChatController)",
			"item": [
				{
					"name": "Create Chat",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"adminId\": \"3fa85f64-5717-4562-b3fc-2c963f66afa6\",\n  \"type\": \"support\",\n  \"referenceId\": \"order_123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/Chat/create",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"Chat",
								"create"
							]
						},
						"description": "Creates a new chat session. UserId is automatically extracted from JWT."
					},
					"response": []
				},
				{
					"name": "Get My Chats",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/Chat/my-chats",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"Chat",
								"my-chats"
							]
						},
						"description": "Returns a list of all chats for the authenticated user."
					},
					"response": []
				},
				{
					"name": "Get Chat Messages",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/Chat/{{chatId}}/messages?skip=0&take=50",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"Chat",
								"{{chatId}}",
								"messages"
							],
							"query": [
								{
									"key": "skip",
									"value": "0"
								},
								{
									"key": "take",
									"value": "50"
								}
							]
						},
						"description": "Paginated retrieval of messages for a specific chat."
					},
					"response": []
				}
			]
		},
		{
